# Production Environment Configuration
# Production settings - Use environment variables for sensitive data

# ============================================================================
# Server Configuration
# ============================================================================
PORT=8081
ENVIRONMENT=production
LOG_LEVEL=warn

# ============================================================================
# Database Configuration (Production RDS)
# ============================================================================
DB_HOST=${PROD_DB_HOST}
DB_PORT=5432
DB_USER=${PROD_DB_USER}
DB_PASSWORD=${PROD_DB_PASSWORD}
DB_NAME=shield_auth_prod
DB_SSLMODE=require

# ============================================================================
# Redis Configuration (ElastiCache Production)
# ============================================================================
REDIS_HOST=${PROD_REDIS_HOST}
REDIS_PORT=6379
REDIS_PASSWORD=${PROD_REDIS_PASSWORD}
REDIS_DB=0

# ============================================================================
# AWS Cognito Configuration (Production)
# ============================================================================
COGNITO_USER_POOL_ID=${PROD_COGNITO_USER_POOL_ID}
COGNITO_APP_CLIENT_ID=${PROD_COGNITO_APP_CLIENT_ID}
COGNITO_APP_CLIENT_SECRET=${PROD_COGNITO_APP_CLIENT_SECRET}
COGNITO_REGION=us-east-1
COGNITO_DOMAIN=${PROD_COGNITO_DOMAIN}

# ============================================================================
# JWT Configuration (Production)
# ============================================================================
JWT_SECRET=${PROD_JWT_SECRET}
JWT_EXPIRY=8h
JWT_REFRESH_EXPIRY=24h

# ============================================================================
# OPA Configuration (Production)
# ============================================================================
OPA_SERVER_URL=${PROD_OPA_SERVER_URL}
OPA_POLICY_PATH=/v1/data

# ============================================================================
# Observability & Monitoring (Production)
# ============================================================================
JAEGER_ENDPOINT=${PROD_JAEGER_ENDPOINT}
PROMETHEUS_ENDPOINT=${PROD_PROMETHEUS_ENDPOINT}
ENABLE_METRICS=true
ENABLE_TRACING=true

# Service Ports (Production)
PROMETHEUS_PORT=9090
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_PORT=14268

# ============================================================================
# Rate Limiting (Strict for production)
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# ============================================================================
# Security (Production)
# ============================================================================
CORS_ALLOWED_ORIGINS=${PROD_ALLOWED_ORIGINS}
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,X-Device-Fingerprint
TRUSTED_PROXIES=${PROD_TRUSTED_PROXIES}

# ============================================================================
# Feature Flags (Production)
# ============================================================================
FEATURE_MULTI_FACTOR_AUTH=true
FEATURE_DEVICE_TRACKING=true
FEATURE_SESSION_ROTATION=true
